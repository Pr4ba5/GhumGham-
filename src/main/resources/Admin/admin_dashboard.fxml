<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.AdminDashboardController">
    <top>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <ImageView fitHeight="40.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../Images/logo.png" />
            </ImageView>
            <Region HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="languageCombo" prefWidth="120.0" style="-fx-background-radius: 5; -fx-padding: 5;" />
            <HBox alignment="CENTER" spacing="10.0">
                <ImageView fitHeight="30.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Images/Icons/profile-admin-icon.png" />
                </ImageView>
                <Label fx:id="adminNameLabel" text="FirstName" />
            </HBox>
            <Button fx:id="logoutBtn" onAction="#handleLogout" text="Logout"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5; -fx-font-weight: bold;" />
        </HBox>
    </top>
    <left>
        <!-- Sidebar -->
        <VBox prefWidth="180.0" spacing="5.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="20.0" />
            </padding>
            <Button fx:id="dashboardBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showDashboard" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-background-radius: 0;" text="Dashboard">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/dashboard-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
            <Button fx:id="touristsBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showTourists" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 0;" text="Tourists">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/tourist-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
            <Button fx:id="guidesBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showGuides" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 0;" text="Guides">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/guide-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
            <Button fx:id="attractionsBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showAttractions" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 0;" text="Attractions">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/attractions-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
            <Button fx:id="bookingsBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showBookings" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 0;" text="Bookings">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/bookings-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
            <Button fx:id="emergencyBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showEmergencyLogs" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 0;" text="Emergency logs">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/emergency-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
            <Button fx:id="treksBtn" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#showTreks" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 0;" text="Treks">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Icons/treks-icon.png" />
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Button>
        </VBox>
    </left>
    <center>
        <!-- Main Content Area -->
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </StackPane>
    </center>
</BorderPane>
