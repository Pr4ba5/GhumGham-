<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.AdminBookingsController">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="BOOKINGS" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250.0" promptText="Search bookings..." style="-fx-background-radius: 5;" />
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSelectedBooking"
                style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Delete" opacity="0.3" disable="true">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshBookings"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Refresh">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
    </HBox>

    <!-- Bookings Table -->
    <TableView fx:id="bookingsTable" style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="bookingIdColumn" prefWidth="100.0" text="Booking ID" />
            <TableColumn fx:id="touristColumn" prefWidth="150.0" text="Tourist" />
            <TableColumn fx:id="attractionColumn" prefWidth="150.0" text="Attraction" />
            <TableColumn fx:id="guideColumn" prefWidth="150.0" text="Guide" />
            <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
        </columns>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </TableView>

    <!-- Footer with statistics -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;">
        <Label fx:id="totalBookingsLabel" text="Total Bookings: 0" textFill="#666666">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="selectedBookingLabel" text="No booking selected" textFill="#999999">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </HBox>
</VBox>
