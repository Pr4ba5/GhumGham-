<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.GuidesContentController">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="GUIDES" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250.0" promptText="Search guides..." style="-fx-background-radius: 5;" />
        <Button fx:id="addGuide" mnemonicParsing="false" onAction="#addGuide" style="-fx-background-color: #3C7EBD;" text="Add" textFill="WHITE" />
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSelectedGuide"
                style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Delete" opacity="0.3" disable="true">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshData"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Refresh">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
    </HBox>

    <!-- Guides Table -->
    <TableView fx:id="guidesTable" style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="184.0" text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="fullName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="languageColumn" prefWidth="129.0" text="Language">
                <cellValueFactory>
                    <PropertyValueFactory property="languages" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="contactColumn" prefWidth="148.0" text="Contact">
                <cellValueFactory>
                    <PropertyValueFactory property="phone" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="experienceColumn" prefWidth="248.0" text="Experience">
                <cellValueFactory>
                    <PropertyValueFactory property="experienceYears" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" prefWidth="141.0" text="Email">
                <cellValueFactory>
                    <PropertyValueFactory property="email" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </TableView>

    <!-- Footer with statistics -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;">
        <Label fx:id="totalGuidesLabel" text="Total Guides: 0" textFill="#666666">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="selectedGuideLabel" text="No guide selected" textFill="#999999">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </HBox>
</VBox>
