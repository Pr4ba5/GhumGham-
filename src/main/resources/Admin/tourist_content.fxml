<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.TouristContentController">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="TOURISTS" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250.0" promptText="Search tourists..." style="-fx-background-radius: 5;" />
        <Button fx:id="addTourist" mnemonicParsing="false" onAction="#addTourist" style="-fx-background-color: #3C7EBD;" text="Add" textFill="WHITE" />
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSelectedTourist"
                style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Delete" opacity="0.3" disable="true">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshData"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Refresh">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
    </HBox>

    <!-- Tourists Table -->
    <TableView fx:id="touristsTable" style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="contactColumn" prefWidth="150.0" text="Contact" />
            <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
        </columns>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </TableView>

    <!-- Footer with statistics -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;">
        <Label fx:id="totalTouristsLabel" text="Total Tourists: 0" textFill="#666666">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="selectedTouristLabel" text="No tourist selected" textFill="#999999">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </HBox>
</VBox>
