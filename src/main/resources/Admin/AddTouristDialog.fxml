<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.AddTouristDialogController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Add New Tourist" textFill="#333333">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="First Name" textFill="#555555">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="firstNameField" prefWidth="300.0" promptText="Enter First Name" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Last Name" textFill="#555555">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="lastNameField" prefWidth="300.0" promptText="Enter Last Name" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Email" textFill="#555555">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" prefWidth="300.0" promptText="Enter Email" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Password" textFill="#555555">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter Password" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Phone" textFill="#555555">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="phoneField" prefWidth="300.0" promptText="Enter phone" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
         </children>
      </VBox>
      <VBox prefHeight="50.0" prefWidth="300.0">
         <children>
            <Label text="Nationality" textFill="#555555">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="nationalityField" prefWidth="300.0" promptText="Enter phone" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" mnemonicParsing="false" prefWidth="80.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5;" text="Cancel" />
            <Button fx:id="saveButton" mnemonicParsing="false" prefWidth="80.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Add" />
         </children>
      </HBox>
   </children>
</VBox>
