<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Guide.GuideDashboardController">
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <ImageView fitHeight="42.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../Images/logo.png" />
            </ImageView>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="notificationButton" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-font-size: 16;" text="ðŸ””" />
            <ComboBox fx:id="languageCombo" prefWidth="120.0" style="-fx-background-radius: 5; -fx-padding: 5;" />
            <Label fx:id="guideNameLabel" text="Guide Name">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Button fx:id="logoutBtn" onAction="#handleLogout" text="Logout"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="200.0" spacing="5.0" style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
            <Button fx:id="dashboardBtn" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showDashboard" prefWidth="160.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-font-size: 14;" text="ðŸ  Dashboard" />
            <Button fx:id="myTripsBtn" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showMyTrips" prefWidth="160.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-font-size: 14;" text="ðŸ¥¾ My trips" />
            <Button fx:id="touristsBtn" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showTourists" prefWidth="160.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-font-size: 14;" text="ðŸ‘¥ Tourists" />
            <Button fx:id="emergencyBtn" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showEmergency" prefWidth="160.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-font-size: 14;" text="ðŸš¨ Emergency" />
            <Button fx:id="profileBtn" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showProfile" prefWidth="160.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-font-size: 14;" text="ðŸ‘¤ My profile" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;">
            <!-- Content will be loaded here -->
        </StackPane>
    </center>
</BorderPane>
