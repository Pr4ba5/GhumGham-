<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Guide.EmergencyManagementController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Header -->
    <Label text="Emergency Management" textFill="#e53e3e">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>

    <!-- Main Content Card -->
    <VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" VBox.vgrow="ALWAYS">

        <!-- Recent Emergency Reports Section -->
        <VBox spacing="15.0">
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Recent Emergency Reports" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

                <!-- Spacer -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Refresh Button -->
                <Button fx:id="refreshButton" text="Refresh"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 12px;" />
            </HBox>

            <!-- Emergency Reports List -->
            <ScrollPane fitToWidth="true" prefHeight="300.0" style="-fx-background-color: transparent; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-background-radius: 10;">
                <VBox fx:id="emergencyReportsList" spacing="10.0" style="-fx-padding: 15;">
                    <!-- Emergency reports will be populated by controller -->
                    <Label fx:id="noReportsLabel" text="No emergency reports found."
                           style="-fx-text-fill: #666666; -fx-font-size: 14px; -fx-padding: 20; -fx-alignment: center;" />
                </VBox>
            </ScrollPane>
        </VBox>

        <!-- Report Emergency Button -->
        <HBox alignment="CENTER">
            <Button fx:id="reportEmergencyButton" text="Report Emergency"
                    style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-padding: 15 30; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>
    </VBox>
</VBox>
