                 </VBox>
                 <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <Label style="-fx-text-fill: #374151; -fx-font-weight: bold;" text="Last Name" />
                     <TextField fx:id="lastNameField" prefHeight="35.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db;" />
                 </VBox>
             </HBox>
             <VBox spacing="5.0">
                 <Label style="-fx-text-fill: #374151; -fx-font-weight: bold;" text="Email Address" />
                 <TextField fx:id="emailField" prefHeight="35.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db;" />
             </VBox>
             <VBox spacing="5.0">
            <HBox prefHeight="58.0" prefWidth="350.0">
               <children>
                  <VBox prefHeight="96.0" prefWidth="166.0">
                     <children>
                             <Label style="-fx-text-fill: #374151; -fx-font-weight: bold;" text="Phone Number" />
                             <TextField fx:id="phoneField" prefHeight="35.0" prefWidth="142.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db;" />
                     </children>
                  </VBox>
                  <Region prefHeight="100.0" prefWidth="21.0" />
                  <VBox prefHeight="111.0" prefWidth="165.0">
                     <children>
                        <Label style="-fx-text-fill: #37415; -fx-font-weight: bold;" text="Nationality" />
                        <TextField fx:id="nationalityField" prefHeight="35.0" prefWidth="68.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
             </VBox>
             <HBox spacing="15.0">
                 <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <Label style="-fx-text-fill: #374151; -fx-font-weight: bold;" text="Create Password" />
                     <PasswordField fx:id="passwordField" prefHeight="35.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db;" />
                 </VBox>
                 <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <Label style="-fx-text-fill: #374151; -fx-font-weight: bold;" text="Confirm Password" />
                     <PasswordField fx:id="confirmPasswordField" prefHeight="35.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db;" />
                 </VBox>
             </HBox>
             <Label fx:id="errorLabel" style="-fx-text-fill: #dc2626; -fx-font-size: 12px;" visible="false" />
             <Button fx:id="createAccountButton" onAction="#handleCreateAccount" prefHeight="45.0" prefWidth="350.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" text="Create Account 👤" />
