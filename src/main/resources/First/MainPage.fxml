<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="First.MainPageController">
    <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" style="-fx-background-color: #f5f5f5;">
        <VBox alignment="CENTER" maxHeight="500" maxWidth="400" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <VBox alignment="CENTER" spacing="15.0">
                <Label style="-fx-background-color: linear-gradient(to bottom right, #f97316, #ea580c); -fx-background-radius: 15; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20;" text="G" />
                <Label style="-fx-text-fill: #f97316; -fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Arial';" text="GHUMGHAM" />
            </VBox>
            <VBox alignment="CENTER" spacing="15.0">
                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" text="Login" />
                <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" text="Register" />
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
