<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="25.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Tourist.TouristDashboardContentController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Enhanced Welcome Section with Weather -->
    <VBox spacing="15.0" style="-fx-background-color: linear-gradient(to right, #2196F3, #1976D2); -fx-padding: 30; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                <Label fx:id="welcomeLabel" text="Good Morning Tourist," textFill="white">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label text="Your adventure awaits! Check your upcoming treks." textFill="rgba(255,255,255,0.9)">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label text="Plan your journey with current weather conditions" textFill="rgba(255,255,255,0.8)">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Weather Section -->
            <VBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 20; -fx-background-radius: 15;">
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <VBox alignment="CENTER_RIGHT" spacing="5.0">
                        <Label fx:id="weatherLocationLabel" text="Kathmandu" textFill="white" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <Label fx:id="weatherDescriptionLabel" text="Loading..." textFill="rgba(255,255,255,0.9)" style="-fx-font-size: 14px;" />
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                            <Label fx:id="weatherTempLabel" text="--Â°C" textFill="white" style="-fx-font-weight: bold; -fx-font-size: 24px;" />
                            <Label fx:id="weatherIconLabel" text="â˜€ï¸" style="-fx-font-size: 32px;" />
                        </HBox>
                    </VBox>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <VBox alignment="CENTER" spacing="2.0">
                        <Label text="Humidity" textFill="rgba(255,255,255,0.8)" style="-fx-font-size: 12px;" />
                        <Label fx:id="weatherHumidityLabel" text="--%"  textFill="white" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="2.0">
                        <Label text="Wind" textFill="rgba(255,255,255,0.8)" style="-fx-font-size: 12px;" />
                        <Label fx:id="weatherWindLabel" text="-- km/h" textFill="white" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- Statistics Cards -->
    <HBox spacing="25.0">
        <!-- Active Bookings Card -->
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 20; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
            <Label text="Active Bookings" textFill="#333333">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="activeTripsLabel" text="0" textFill="#2196F3">
                <font>
                    <Font name="System Bold" size="42.0" />
                </font>
            </Label>
        </VBox>

        <!-- Calendar -->
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 20; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
            <Label text="Calendar" textFill="#333333">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <GridPane fx:id="calendarGrid" hgap="5.0" vgap="5.0" />
        </VBox>
    </HBox>

    <!-- Upcoming Trek Information -->
    <VBox fx:id="upcomingTrekContainer" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 20; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="ðŸŽ’" style="-fx-font-size: 24px;" />
            <VBox spacing="5.0">
                <Label text="Your Next Adventure" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Label text="Upcoming trek booking details" textFill="#666666">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="difficultyLabel" text="Easy" textFill="white" style="-fx-background-color: #4CAF50; -fx-background-radius: 15; -fx-padding: 5 10; -fx-font-size: 12px;" />
        </HBox>

        <VBox spacing="15.0">
            <Label fx:id="trekNameLabel" text="No upcoming trek" textFill="#333333">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label fx:id="trekLocationLabel" text="Location not available" textFill="#666666">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Label fx:id="trekDescriptionLabel" text="No trek information available." textFill="#666666" wrapText="true">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Label fx:id="trekWarningLabel" text="âš ï¸ Book your next adventure!" textFill="#FF9800">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>
    </VBox>
</VBox>
