<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Tourist.BookingDialogController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Header -->
    <VBox spacing="5.0">
        <Label text="Book your Adventure" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Complete your booking for [Selected adventure]" textFill="#666666">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </VBox>

    <!-- Trek Details Section -->
    <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 20;">
        <Label text="Trek Details" textFill="#333333">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <VBox spacing="5.0">
            <Label fx:id="trekNameLabel" text="Trek Name" textFill="#333333">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="trekLocationLabel" text="Location" textFill="#666666">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>

            <!-- Start Date -->
            <HBox spacing="5.0">
                <Label style="-fx-font-size: 12;" text="ðŸ“…" />
                <Label fx:id="trekStartDateLabel" text="Start Date" textFill="#4CAF50">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
            </HBox>

            <HBox spacing="20.0">
                <Label fx:id="trekCostLabel" text="Cost" textFill="#4CAF50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="trekDurationLabel" text="Duration" textFill="#666666">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </HBox>
            <Label fx:id="guideNameLabel" text="Guide" textFill="#666666">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>
    </VBox>

    <!-- Booking Details Form -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 10;">
        <Label text="Booking Details" textFill="#333333">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <!-- Full Name -->
        <VBox spacing="5.0">
            <Label text="Full Name *" textFill="#333333">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <TextField fx:id="fullNameField" promptText="Enter your full name" style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5;" />
        </VBox>

        <!-- Travel Date -->
        <VBox spacing="5.0" />

        <!-- Emergency Contact Section -->
        <VBox spacing="10.0">
            <Label text="Emergency Contact" textFill="#333333">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Emergency Contact Name *" textFill="#333333">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="emergencyContactNameField" promptText="Full name" style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5;" />
                </VBox>

                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Emergency Contact Phone *" textFill="#333333">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="emergencyContactPhoneField" promptText="+977 **********" style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5;" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Special Requests -->
        <VBox spacing="5.0">
            <Label text="Special Requests (Optional)" textFill="#333333">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <TextArea fx:id="specialRequestsArea" prefRowCount="3" promptText="Any special dietary requirements, medical conditions, or other requests..." style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5;" wrapText="true" />
        </VBox>

        <!-- Required Fields Note -->
        <Label text="* Required fields" textFill="#999999">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
    </VBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="backButton" style="-fx-background-color: #f5f5f5; -fx-text-fill: #333333; -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-size: 14;" text="Back to trek" />

        <Button fx:id="completeBookingButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-size: 14; -fx-font-weight: bold;" text="Complete Booking" />
    </HBox>
</VBox>
