<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="30.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Tourist.TouristProfileController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Profile Header -->
    <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 15;">
        <!-- Avatar -->
        <Label fx:id="userAvatarLabel" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 50; -fx-font-size: 36px; -fx-font-weight: bold; -fx-alignment: center; -fx-pref-width: 80; -fx-pref-height: 80;" text="A" />

        <!-- User Name -->
        <Label fx:id="userNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Angel Shakya" />
    </VBox>

    <!-- Personal Information Section -->
    <VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 15;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Personal Information" />

        <!-- Full Name Field -->
        <VBox spacing="8.0">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #666666;" text="Full Name" />
            <TextField fx:id="fullNameField" editable="false" style="-fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;" text="Angel Shakya" />
        </VBox>

        <!-- Email and Phone Row -->
        <HBox spacing="20.0">
            <!-- Email Field -->
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #666666;" text="Email" />
                <TextField fx:id="emailField" editable="false" style="-fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: #f5f5f5;" text="angelshakya@gmail.com" />
            </VBox>

            <!-- Phone Field -->
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #666666;" text="Phone" />
                <TextField fx:id="phoneField" editable="false" style="-fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;" text="+977-9841234567" />
            </VBox>
        </HBox>
    </VBox>
</VBox>
