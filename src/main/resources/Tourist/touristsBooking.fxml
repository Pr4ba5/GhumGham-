<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Tourist.TouristBookingController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header Row -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <!-- BOOKINGS Title -->
        <Label text="BOOKINGS" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Spacer to push controls to the right -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Filter and Search Controls -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0">

            <TextField fx:id="searchField" prefWidth="200.0" promptText="Search bookings..." style="-fx-background-radius: 5; -fx-padding: 8; -fx-border-color: #cccccc; -fx-border-radius: 5;" />

            <Button fx:id="refreshButton" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;" text="Refresh" />
        </HBox>
    </HBox>

    <!-- Bookings Table -->
    <TableView fx:id="bookingsTable" minHeight="200.0" prefHeight="400.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="touristColumn" minWidth="100.0" prefWidth="120.0" style="-fx-alignment: CENTER-LEFT;" text="Tourist" />
            <TableColumn fx:id="attractionColumn" minWidth="120.0" prefWidth="150.0" style="-fx-alignment: CENTER-LEFT;" text="Attraction" />
            <TableColumn fx:id="guideColumn" minWidth="100.0" prefWidth="120.0" style="-fx-alignment: CENTER-LEFT;" text="Guide" />
            <TableColumn fx:id="dateColumn" minWidth="80.0" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Date" />
        </columns>

        <!-- Table styling -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

        <!-- Placeholder for empty table -->
        <placeholder>
            <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 50;">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="No content in table" />
            </VBox>
        </placeholder>
    </TableView>

    <!-- Bottom Status Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">

        <Region HBox.hgrow="ALWAYS" />

        <!-- Action Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="viewDetailsButton" disable="true" style="-fx-background-color: transparent; -fx-border-color: #007bff; -fx-border-radius: 5; -fx-text-fill: #007bff; -fx-padding: 8 16; -fx-cursor: hand;" text="View Details" />
        </HBox>
    </HBox>
</VBox>
